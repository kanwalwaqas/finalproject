@model IEnumerable<OLIWS.Models.Fund_Categories>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
<div class="content-Page">
    <div class="card-box"></div>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table table-responsive">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Education)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Health)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Loan)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TakenTo)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Education)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Health)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Loan)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TakenTo)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Fund_CategoriesID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Fund_CategoriesID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Fund_CategoriesID })
                </td>
            </tr>
        }

    </table>
    </div>
