@model IEnumerable<OLIWS.Models.City>
@using OLIWS.Models;
@{
    ViewBag.Title = "city";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="container" style="font-family:Arial;margin-top:80px">
    <form method="post">
        <h3>Countries </h3>
        @Html.AntiForgeryToken()
        <input type="text" name="city_name" class="form-control" id="fname" maxlength="25" onkeyup="validatename('fname','coerror',1,'C','Enter Alphabet only')" style="height:30px;width:200px">
        <span id="coerror"></span>
        <div class="col-md-offset-2 col-md-10" style="margin-top:-30px;margin-right:40px">
            <input type="submit" value="Add" class="btn btn-info btn-fill btn-wd" />
            @if (ViewBag.CountryError != "")
            {
                <span>@ViewBag.CountryError</span>
            }
        </div>

    </form>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.state.state_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.city_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.status)
            </th>
            <th></th>
        </tr>

        @foreach (City ci in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => ci.state.state_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => ci.city_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => ci.status)
                </td>
                <td>
                    @Html.ActionLink(ci.city_name, "", new { id = ci.CityID }) |
                    @Html.ActionLink("Edit", "ci_edit", new { id = ci.CityID }) |
                    @Html.ActionLink("Active", "citi_active", new { id = ci.CityID })
                </td>
            </tr>
        }

    </table>
</div>
