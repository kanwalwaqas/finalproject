@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
<p>
    <div class="form-group col-lg-1">
        @Html.ActionLink("Create New", "Create", null, htmlAttributes: new { @class = "btn btn-success" })
    </div>
</p>
<div class="container"></div>
<div class="panel panel-default">
    <div class="table-responsive">
        <table class="table v-middle">
            <thead>
                <tr>
                    <th>Name</th>
                    <th class="text-right">Action</th>
                </tr>
            </thead>
            <tbody id="responsive-table-body">
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-left">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td class="text-right">
                            <a href="~/Admin/Roles/Edit/@item.Id" class="btn btn-success btn-xs" data-toggle="tooltip" data-placement="top" title="Edit"><i class="fa fa-pencil"></i></a>
                            <a href="~/Admin/Roles/Details/@item.Id" class="btn btn-info btn-xs" data-toggle="tooltip" data-placement="top" title="Detail"><i class="fa fa-info-circle"></i></a>
                            <a href="~/Admin/Roles/Delete/@item.Id" class="btn btn-danger btn-xs" data-toggle="tooltip" data-placement="top" title="Delete"><i class="fa fa-times"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="panel-footer padding-none text-center">
        <ul class="pagination">
            <li class="disabled"><a href="#">&laquo;</a></li>
            <li class="active"><a href="#">1</a></li>
            <li><a href="#">2</a></li>
            <li><a href="#">3</a></li>
            <li><a href="#">4</a></li>
            <li><a href="#">5</a></li>
            <li><a href="#">&raquo;</a></li>
        </ul>
    </div>
</div>

