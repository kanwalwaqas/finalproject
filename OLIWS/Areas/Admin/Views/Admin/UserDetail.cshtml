@model IEnumerable<OLIWS.Models.ApplicationUser>
@{
    ViewBag.Title = "UserDetail";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<table class="table" style="margin-top:400px">
    <tr>



        <th>
            <label>Email</label>

        </th>
        <th>

            <label>First Name</label>
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>


            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>

            <td class="text-right">
                <a href="~/Admin/Admin/Userblock/@item.Id" class="btn btn-success btn-xs" data-toggle="tooltip" data-placement="top" title="Edit"><i class="fa fa-pencil"></i></a>

            </td>
        </tr>
    }

</table>
