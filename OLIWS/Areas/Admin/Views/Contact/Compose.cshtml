
@{
    ViewBag.Title = "Compose";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("Create", "Contacts", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <h2>Contact</h2>
    <div class="row">
        <div class="col-xs-12">
            <div class="page-title-box">
                <h4 class="page-title">Compose </h4>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
        <!-- end row -->
    <div class="row">
        <div class="col-sm-12">
            <div class="card-box m-t-20">
                <div class="">
                    <form role="form">
                        <div class="form-group">
                            <input type="email" class="form-control" contenteditable="false" placeholder="To" value="@Model.Email" name="SendTo" style="width:45%" />
                        </div>
                        <div class="form-group">
                           
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Subject" name="Subject" style="width:45%" />
                        </div>
                        <textarea @*id="summernote"*@ @*class="summernote"*@ name="Message"></textarea>
                        <div class="btn-toolbar form-group m-b-0">
                            <div class="pull-right">
                                <button type="button" class="btn btn-success waves-effect waves-light m-r-5"><i class="fa fa-floppy-o"></i></button>
                                <button type="button" class="btn btn-success waves-effect waves-light m-r-5"><i class="fa fa-trash-o"></i></button>
                                <button class="btn btn-purple waves-effect waves-light"> <span>Send</span> <i class="fa fa-send m-l-10"></i> </button>
                            </div>
                        </div>

                    </form>
                </div>
            </div>

        </div>
    </div>
        <script type="text/javascript">
            $(document).ready(function () {
                $('#summernote').summernote();
            });
        </script>
}


