@model IEnumerable<OLIWS.Models.Contact_us>
@using Microsoft.AspNet.Identity;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<h2>Contact</h2>
<!-- Start content -->
<div class="row">
    <div class="col-xs-12">
        <div class="page-title-box">
            <h4 class="page-title">Inbox </h4>
            <ol class="breadcrumb p-0 m-0">
                <li>
                    <a href="#">friendfinder</a>
                </li>
                <li>
                    <a href="#">Email </a>
                </li>
                <li class="active">
                    Inbox
                </li>
            </ol>
            <div class="clearfix"></div>
        </div>
    </div>
</div>
<!-- end row -->


<div class="row">
    <div class="col-xs-12">
        <div class="mails">

            <div class="table-box">
                <div class="table-detail">
                    <div class="p-20">
                        <a href="~/Admin/Contact/Compose/@User.Identity.GetUserId()" class="btn btn-danger btn-rounded btn-custom w-lg waves-effect waves-light">Compose</a>
                        <div class="list-group mail-list  m-t-20">
                            <a href="#" class="list-group-item b-0 text-success"><i class="fa fa-download m-r-10"></i>Inbox <b>@ViewBag.emailcount</b></a>
                            <a href="#" class="list-group-item b-0"><i class="fa fa-paper-plane-o m-r-10"></i>Sent Mail <b>@ViewBag.emailsent</b></a>
                            <a href="#" class="list-group-item b-0"><i class="fa fa-eye m-r-10"></i>Seen <b>@ViewBag.emailseen</b></a>
                            <a href="#" class="list-group-item b-0"><i class="fa fa-trash-o m-r-10"></i>Trash <b>@ViewBag.emaildeleted</b></a>
                        </div>
                    </div>
                </div>

                <div class="table-detail mail-right">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="btn-toolbar m-t-20" role="toolbar" style="margin-right:2px;float:right">
                                <a href="~/Admin/Contact/Show" class="btn btn-danger btn-rounded btn-custom w-lg waves-effect waves-light">Full Detail</a>
                            </div>
                        </div>
                    </div> <!-- End row -->
                    <div class="table-responsive m-t-20">
                        <table class="table table-hover mails m-0">
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="unread">
                                        <td class="mail-select">
                                            <div class="checkbox checkbox-primary m-r-15">
                                                <input id="checkbox1" type="checkbox" checked="@item.Seen" disabled title="Seen">
                                                <label for="checkbox1"></label>
                                            </div>

                                            <i class="fa fa-star m-r-15 text-warning"></i>

                                            <i class="fa fa-circle m-l-5 text-info"></i>
                                        </td>

                                        <td>
                                            <a href="~/Admin/Contact/Details/@item.Contact_usID" class="email-name">@item.con_Email</a>
                                        </td>

                                        <td class="hidden-xs">
                                            <a href="~/Admin/Contact/Details/@item.Contact_usID" class="email-msg">@item.name</a>
                                        </td>
                                        <td style="width: 20px;">
                                            <i class="fa fa-paperclip"></i>
                                        </td>
                                        <td class="text-right">
                                            @item.currentDate.Hour:@item.currentDate.Minute
                                        </td>
                                        <td align="right">
                                            <a href="~/Admin/Contact/Create/@item.Contact_usID"><i class="fa fa-mail-reply" style="color:forestgreen" title="Reply"></i></a>
                                            <a href="~/Admin/Contact/Details/@item.Contact_usID"><i class="fa fa-exclamation-circle" style="color:darkslateblue" title="Details"></i></a>
                                            <a href="~/Admin/Contact/Delete/@item.Contact_usID"><i class="fa fa-trash-o" style="color:red" title="Delete"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>


                    <div class="row m-t-20 m-b-30">
                        <div class="col-xs-7 m-t-20">
                            Showing: @ViewBag.emailcount
                        </div>
                        <div class="col-xs-5 m-t-20">
                            <div class="btn-group pull-right">
                                <button type="button" class="btn btn-default waves-effect"><i class="fa fa-chevron-left"></i></button>
                                <button type="button" class="btn btn-default waves-effect"><i class="fa fa-chevron-right"></i></button>
                            </div>
                        </div>
                    </div>


                </div>
            </div>


        </div>
    </div>
</div>
