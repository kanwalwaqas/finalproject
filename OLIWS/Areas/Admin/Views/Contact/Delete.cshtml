@model OLIWS.Models.Contact_us
@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<h2>Delete</h2>

<div class="row">

    <div class="col-sm-12">
        <div class="card-box" style="background-image:url(/Areas/Admin_Style/images/12.jpg)">
            <div class="row">
                <div class="col-sm-10" style="margin-left:95px">
                    <div class="card-box" style="background-color:#cc2900">
                        <div class="row">

                            <div class="col-sm-10" style="margin-left:80px">
                                <div class="card-box">
                                    <div>
                                        <h4>De Activate Contact</h4>
                                        <hr />
                                        <dl class="dl-horizontal">
                                            <dt>
                                                Name
                                            </dt>

                                            <dd>
                                                @Html.DisplayFor(model => model.name)
                                            </dd>

                                            <dt>
                                                Added By
                                            </dt>

                                            <dd>
                                                <label>@Model.con_Email</label>
                                            </dd>
                                            <dt>
                                                Added Date-Time
                                            </dt>

                                            <dd>
                                                @Html.DisplayFor(model => model.currentDate)
                                            </dd>

                                            <dt>
                                                Seen
                                            </dt>

                                            <dd>
                                                @Html.DisplayFor(model => model.Seen)
                                            </dd>
                                            <dt>
                                                Message
                                            </dt>

                                            <dd>
                                                @Html.DisplayFor(model => model.Message)
                                            </dd>
                                        </dl>

                                        @using (Html.BeginForm())
                                        {
                                            @Html.AntiForgeryToken()

                                            <div class="form-actions no-color">
                                                <p>
                                                    <input type="submit" value="De-Activate" @*class="btn btn-danger btn-rounded"*@  style="color:#ff3300"/>
                                                    @Html.ActionLink("Back to List", "Index", null, htmlAttributes: new { @class = "btn btn-inverse btn-rounded" })
                                                </p>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
