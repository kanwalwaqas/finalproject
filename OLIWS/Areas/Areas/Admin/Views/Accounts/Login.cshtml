@using OLIWS.Models
@{
    Layout = null;
}
@using (Html.BeginForm("Login", "Accounts", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
<link href="~/Areas/Styling/Design/css/bootstrap.css" rel="stylesheet" type="text/css" media="all" />
<link href="~/Areas/Styling/Design/css/style.css" rel="stylesheet" type="text/css" media="all" />
