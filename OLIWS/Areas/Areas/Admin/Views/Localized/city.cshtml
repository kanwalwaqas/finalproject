@model IEnumerable<OLIWS.Models.City>
@using OLIWS.Models;

@{
    ViewBag.Title = "city";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{


<h2>Cities</h2>

<div class="container" style="font-family:Arial">
    <form method="post">
        <h3>State</h3>
        @Html.AntiForgeryToken()
        <input type="text" name="city_name" class="form-control" id="fname" maxlength="25" onkeyup="validatename('fname','coerror',1,'C','Enter Alphabet only')" style="height:30px;width:200px">
        <span id="coerror"></span>
        <div class="col-md-offset-2 col-md-10" style="margin-top:-30px;margin-right:40px">
            <input type="submit" value="Add" class="btn btn-info btn-fill btn-wd" />
            @if (ViewBag.CountryExistencesError != "")
            {
                <span>@ViewBag.CountryExistencesError</span>
            }
        </div>

    </form>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.city_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.status)
            </th>
            <th></th>
        </tr>

        @foreach (City ci in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => ci.city_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => ci.status)
                </td>
                <td>
                    @Html.ActionLink(ci.city_name, "city") |
                    @Html.ActionLink("Details", "Details", new { id = ci.city_name }) |
                    @Html.ActionLink("Delete", "Delete", new { id = ci.city_name })
                </td>
            </tr>
        }

    </table>
    </div>
    }