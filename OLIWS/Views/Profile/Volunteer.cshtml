@model OLIWS.Models.ProfileViewModel
@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Volunteer";
    Layout = "~/Views/Shared/profile_Layout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="card card-user">
                    <div class="image">
                        <img src="assets/img/background.jpg" alt="..." />
                    </div>
                    <div class="content">
                        <div class="author">
                            @foreach (var i in Model.P_Profile)
                            {
                                <img class="avatar border-white" src="@Url.Content(i.picture)" alt="..." />
                            }
                            @using (Html.BeginForm("profile_picture", "Profile", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                @Html.AntiForgeryToken()

                                foreach (var item in Model.P_User)
                                {
                                    <h4 class="title">
                                        @item.FirstName<br />
                                        <a href="#"><small>@item.FirstName</small></a>
                                    </h4>
                                }
                                <div class="row">
                                    <div class="col-md-3" style="margin-left:350px">
                                        <input type="file" name="file" id="file" />
                                    </div>
                                    <div class="col-md-3">
                                        <input type="submit" value="Submit" style="margin-right:200px;height:22px;width:70px" />
                                    </div>
                                    <input type="hidden" name="Id" value="@User.Identity.GetUserId()" />
                                </div>
                            }


                        </div>

                    </div>
                    <hr>

                </div>
            </div>
@using (Html.BeginForm("Volunteer", "Profile", FormMethod.Post, new { enctype = "multipart/form-data" }))

{
    @Html.AntiForgeryToken()


            <div class="col-lg-12 col-md-12">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Volunteer Profile</h4>
                    </div>
                    @foreach (var item in Model.P_Profile)
                    {
                        <input type="hidden" name="Profile_biuldingID" value="@item.Profile_biuldingID" />
                    }
                    @foreach (var item in Model.P_User)
                    {
                        <input type="hidden" name="Id" value="@item.Id" />
                    <div class="content">
                        <form>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>FirstName</label>
                                        <input type="text" style="color:black" disabled class="form-control border-input" name="FirstName" placeholder="FirstName" value="@item.FirstName">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>LastName</label>
                                        <input type="text" style="color:black" disabled class="form-control border-input" name="LastName" placeholder="LastName" value="@item.LastName">
                                    </div>
                                </div>


                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Email</label>
                                        <input type="Email" style="color:black" disabled class="form-control border-input" placeholder="Email" value="@item.Email">
                                    </div>
                                </div>

                            </div>
                               
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>CNIC</label>
                                        <input type="text" style="color:black" disabled class="form-control border-input" placeholder="CNIC" value="@item.CNIC">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Phone</label>
                                        <input type="text" style="color:black" class="form-control border-input" placeholder="Phone" value="@item.Phone">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Address</label>
                                        <input type="text" style="color:black" class="form-control border-input" placeholder="Address" value="@item.Address">
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Date_of_birth</label>
                                        <input type="text" style="color:black" disabled class="form-control border-input" placeholder="Date_of_birth" value="@item.Date_of_birth">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Gender</label>
                                        <input type="text" style="color:black" disabled class="form-control border-input" placeholder="Gender" value="@item.Gender">
                                    </div>
                                </div>
                            </div>

               @foreach (var it in Model.P_Profile)
               {
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Qualification</label>
                                        <textarea  name="qualification" style="color:black" class="form-control textarea required" required rows="5" maxlength="150" > @it.Qualification
                                        </textarea>
                                              </div>
                                </div>

               }
                            <br/>
                                <div class="text-center">
                                    <button type="submit" class="btn btn-info btn-fill btn-wd">Update Profile</button>
                                </div>
                                <div class="clearfix"></div>

                        </form>

                    </div>}
                </div>
            </div>
}


        </div>
    </div>
</div>


