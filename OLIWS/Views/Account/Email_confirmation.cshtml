    ViewBag.Title = "Email_confirmation";
    Layout = null;
}

<title>Email Confirmation</title>
@Html.ValidationSummary("",new { @class="Text-danger"})
<link href="~/Areas/Styling/Design/css/bootstrap.css" rel="stylesheet" type="text/css" media="all" />
